@model Product
@{
    ViewData["Title"] = "Add Product";
}

<h1>Add Product</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Title" for="formGroupExampleInput"></label>
        <input asp-for="Title" type="text" class="form-control" id="formGroupExampleInput"/>
        <span asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" for="formGroupExampleInput"></label>
        <input asp-for="Price" type="text" class="form-control" id="formGroupExampleInput" />
        <span asp-validation-for="Price"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Category" for="formGroupExampleInput"></label>
        <input asp-for="Category" type="text" class="form-control" id="formGroupExampleInput"/>
        <span asp-validation-for="Category"></span>
    </div>

    <input type="submit"  class="btn btn-primary"/>
</form>

